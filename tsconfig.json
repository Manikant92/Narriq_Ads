{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@motia/*": ["./motia/*"],
      "@integrations/*": ["./integrations/*"]
    },
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "motia/**/*.ts",
    "integrations/**/*.ts",
    "tests/**/*.ts",
    "worker/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "frontend"
  ]
}
